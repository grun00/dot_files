alias cd..="cd .."
alias ps="ps auxf --forest"
alias rs="rails s"
alias rc="rails c"
alias vim="nvim -p"
alias cmatrix="cmatrix -C magenta"

alias rm="rm -i"
alias cp='cp -i'
alias mv='mv -i'
alias mkdir="mkdir -pv"

alias ping="ping -c 5"

alias ls="/opt/coreutils/bin/ls"
alias sl="/opt/coreutils/bin/ls"
alias l='ls -lFh'
alias la='ls -lAFh'
alias ll='ls -l'
alias ldot='ls -ld .*'
alias lr='ls -tRFh'

#Rails
alias rrg='rails routes | grep'
alias rs='rails server'
alias railsm='rails db:migrate'

alias i3rc='${=EDITOR} ~/.i3/config'
alias tmuxrc='${=EDITOR} ~/.tmux.conf'
alias zshrc='${=EDITOR} ~/.zshrc'
alias nvimrc='${=EDITOR} ~/.config/nvim/init.vim'
alias aliasrc='${=EDITOR} ~/.config/aliasrc'

#Misc
