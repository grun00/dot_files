alias emacsmode="setxkbmap -option && setxkbmap -option ctrl:nocaps"
alias vimode="setxkbmap -option && setxkbmap -option caps:escape"

alias cd..="cd .."
alias ps="ps auxf --forest"
alias rs="rails s"
alias rc="rails c"
alias vim="nvim -p"
alias rspec="bundle exec rspec"
alias cmatrix="cmatrix -C magenta"
alias starwars="telnet towel.blinkenlights.nl"
alias glog="git log --oneline"

alias rm="trash"
alias cp='cp -i'
alias mv='mv -i'
alias mkdir="mkdir -pv"

alias ping="ping -c 5"

alias sl="ls"
alias l='ls -lFh'
alias la='ls -lAFh'
alias ll='ls -l'
alias ldot='ls -ld .*'
alias lr='ls -tRFh'


alias i3rc='${=EDITOR} ~/.i3/config'
alias tmuxrc='${=EDITOR} ~/.tmux.conf'
alias zshrc='${=EDITOR} ~/.zshrc'
alias nvimrc='${=EDITOR} ~/.config/nvim/init.vim'
alias aliasrc='${=EDITOR} ~/.config/aliasrc'

#Misc
alias ghc="ghc -dynamic"


# AutoSeg
alias gitdo='~/Documents/Projects/AutoSeg/scripts/gitdo.rb'

alias youtube-dl-audio='youtube-dl --ignore-errors --output "%(title)s.%(ext)s" --extract-audio --audio-format mp3'

alias vimmod='vim $(git status | grep modified: | sed 's/modified://g')'
